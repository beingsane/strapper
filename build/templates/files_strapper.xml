<?xml version="1.0" encoding="UTF-8"?>
<extension type="file" version="3.2" method="upgrade">
    <!-- Generic Metadata -->
    <name>AkeebaStrapper</name>
    <author>Nicholas K. Dionysopoulos</author>
    <authorEmail>nicholas@dionysopoulos.me</authorEmail>
    <authorUrl>https://www.akeebabackup.com</authorUrl>
    <copyright>(C) 2012-2015 Akeeba Ltd.</copyright>
    <license>GNU GPL v2 or later</license>
    <version>##VERSION##</version>
    <creationDate>##DATE##</creationDate>
    <description>Namespaced jQuery and Bootstrap for compatibility with non-Bootstrap templates.</description>

    <!-- Fileset definition -->
    <fileset>
        <files folder="strapper3" target="media/strapper3">
            <folder>css</folder>
            <folder>img</folder>
            <folder>js</folder>
            <folder>less</folder>
            <filename>strapper.ini</filename>
            <filename>strapper.php</filename>
            <filename>version.php</filename>
        </files>
		<files target="media/strapper3">
			<filename>version.txt</filename>
		</files>
    </fileset>

    <!-- Installation / uninstallation script file -->
    <scriptfile>script.strapper.php</scriptfile>
</extension>